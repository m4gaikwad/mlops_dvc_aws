{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3DVC",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "arn:aws:s3:::YOUR_DVC_BUCKET"
    },
    {
      "Sid": "AllowS3ObjectsDVC",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:AbortMultipartUpload",
        "s3:ListBucketMultipartUploads",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": "arn:aws:s3:::YOUR_DVC_BUCKET/*"
    }
  ]
}